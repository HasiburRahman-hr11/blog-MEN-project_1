<%- include('../../partials/header.ejs') %> 

<div class="create_post my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-12 mb-3">
                <div class="card p-3">
                    <div class="user_card mb-4 text-center">
                        <% if (user.profilePics) { %>
                         <div class="user_img mb-3 mt-2">
                            <img src=<%= user.profilePics %> id="profilePics"  alt="Profile Picture">
                         </div>
                         <div class="avatar-form my-4">
                            <form 
                            id="profilePicsForm" 
                            action="/uploads/profilePics"
                            enctype="multipart/form-data"
                            >
                                <div class="d-flex justify-content-center">
                                    <div class="form-group me-3">
                                        <label for="profilePicsFile" id="upload-image" class="btn btn-primary">Upload</label>
                                        <input type="file" name="profilePics" hidden id="profilePicsFile"
                                        accept="image/*">
                                    </div>
                                    <input type="button" value="Remove" class="btn btn-dark"
                                    id="removeProfilePics"
                                    style="display: <%= user.profilePics.includes('avatar.png') ? 'none' : 'block' %>">
                                </div>
                            </form>
                        </div>                   
                        <% } %>
                        <div class="user_details">
                            <h4><%= user.username %></h4>
                            <p><%= user.email %></p>
                        </div>
                    </div>
                    <%- include('../../partials/admin-menu.ejs') %> 
                </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-12">
                <div class="post_form_card card p-3">
                    <h3 class="text-center mb-3">Create Profile</h3>
                    <form class="admin_form" action="/dashboard/create-profile" method="post">
                        <div class="row">
                            <div class="col-md-6 col-sm-12 mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input 
                                type="text" 
                                class="form-control <%= error.name ? 'is-invalid' : '' %>" 
                                id="name" 
                                placeholder="Name"
                                name="name"
                                value="<%= value.name && value.name %>"
                                >
                                <div class="invalid-feedback">
                                    <%= error.name %>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                placeholder="Email Address"
                                name="email"
                                value="<%= user.email %>"
                                disabled 
                                readonly
                                >
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="title" class="form-label">Title</label>
                                <input 
                                type="text" 
                                class="form-control <%= error.title ? 'is-invalid' : '' %>" 
                                id="title" 
                                placeholder="Title"
                                name="title"
                                value="<%= value.title && value.title %>"
                                >
                                <div class="invalid-feedback">
                                    <%= error.title %>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <label for="bio" class="form-label">Bio</label>
                                <textarea 
                                name="bio" 
                                id="bio" 
                                class="form-control <%= error.bio ? 'is-invalid' : '' %>" 
                                rows="5"><%= value.bio && value.bio %></textarea>
                                <div class="invalid-feedback">
                                    <%= error.bio %>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-12 mb-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-globe-asia"></i></span>
                                    <input 
                                    type="url" 
                                    class="form-control <%= error.website ? 'is-invalid' : '' %>" 
                                    placeholder="Website" 
                                    name="website"
                                    value="<%= value.website && value.website %>">
                                    <div class="invalid-feedback">
                                        <%= error.website %>
                                    </div>
                                  </div>
                            </div>
                            <div class="col-md-6 col-sm-12 mb-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fab fa-facebook-f"></i></span>
                                    <input 
                                    type="url" 
                                    class="form-control <%= error.facebook ? 'is-invalid' : '' %>" 
                                    placeholder="Facebook" 
                                    name="facebook"
                                    value="<%= value.facebook && value.facebook %>">
                                    <div class="invalid-feedback">
                                        <%= error.facebook %>
                                    </div>
                                  </div>
                            </div>
                            <div class="col-md-6 col-sm-12 mb-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fab fa-twitter"></i></span>
                                    <input 
                                    type="url" 
                                    class="form-control <%= error.twitter ? 'is-invalid' : '' %>" 
                                    placeholder="Twitter" 
                                    name="twitter"
                                    value="<%= value.twitter && value.twitter %>">
                                    <div class="invalid-feedback">
                                        <%= error.twitter %>
                                    </div>
                                  </div>
                            </div>
                            <div class="col-md-6 col-sm-12 mb-3">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fab fa-github"></i></span>
                                    <input 
                                    type="url" 
                                    class="form-control <%= error.github ? 'is-invalid' : '' %>" 
                                    placeholder="Github" 
                                    name="github"
                                    value="<%= value.github && value.github %>">
                                    <div class="invalid-feedback">
                                        <%= error.github %>
                                    </div>
                                  </div>
                            </div>
                        </div>

                        <div class="mt-2">
                            <button class="btn btn-primary" type="submit">Create Profile</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>
<script src="/scripts/profilePic.js"></script>

</body>
</html>